{
    "name": "exolnet/:package_name",
    "description": ":package_description",
    "keywords": [
        "exolnet",
        ":package_name"
    ],
    "homepage": "https://github.com/eXolnet/:package_name",
    "license": "MIT",
    "authors": [
        {
            "name": ":author_name",
            "homepage": "https://www.exolnet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit" : "^5.7",
        "orchestra/testbench" : "~3.4.6|~3.5.0|~3.6.0"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Skeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Skeleton\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\Skeleton\\SkeletonServiceProvider"
            ],
            "aliases": {
                "Skeleton": "Exolnet\\Skeleton\\SkeletonFacade"
            }
        }
    }
}
